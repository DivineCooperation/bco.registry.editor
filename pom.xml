<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>de.citec.csra</groupId>
    <artifactId>registry-editor</artifactId>
    <version>0.2.1-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>RegistryEditor</name>
    <url>http://maven.apache.org</url>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>appassembler-maven-plugin</artifactId>
                <version>1.8.1</version>
                <executions>
                    <execution>
                        <phase>install</phase>
                        <goals>
                            <goal>assemble</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <programs>
                        <program>
                            <mainClass>de.citec.csra.re.RegistryEditor</mainClass>
                            <id>registry-editor</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                    </programs>
                </configuration>
            </plugin>
        </plugins>
    </build>
	
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <global.version.jul>0.1.0</global.version.jul>
        <global.version.registry-manager>0.3.0</global.version.registry-manager>
    </properties>
	
    <scm>
        <developerConnection>scm:git:https://projects.cit-ec.uni-bielefeld.de/git/lsp-csra.registry-editor.git</developerConnection>
        <url>https://projects.cit-ec.uni-bielefeld.de/git/lsp-csra.registry-editor.git</url>
    </scm>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-core</artifactId>
            <version>2.1.2</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>2.1.2</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>de.citec</groupId>
            <artifactId>jul.extension.rsb.com</artifactId>
            <version>${global.version.jul}</version>
        </dependency>
        <dependency>
            <groupId>de.citec</groupId>
            <artifactId>jul.storage</artifactId>
            <version>${global.version.jul}</version>
        </dependency>
        <dependency>
            <groupId>de.citec</groupId>
            <artifactId>jul.extension.rsb.scope</artifactId>
            <version>${global.version.jul}</version>
        </dependency>
        <dependency>
            <groupId>de.citec</groupId>
            <artifactId>jul.processing</artifactId>
            <version>${global.version.jul}</version>
        </dependency>
        <dependency>
            <groupId>de.citec</groupId>
            <artifactId>dm.remote</artifactId>
            <version>${global.version.registry-manager}</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>de.citec</groupId>
            <artifactId>lm.remote</artifactId>
            <version>${global.version.registry-manager}</version>
            <type>jar</type>
        </dependency>
    </dependencies>
</project>
